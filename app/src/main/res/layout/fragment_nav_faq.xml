<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Page dedicated to the faq section of the app, linked straight from the navigation bar-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".FaqFragment">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="331dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="@string/faqTitle"
        android:onClick="getDocumentAndDisplay"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/question1"
            style="@style/ButtonStyle"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/helvetica_family"
            android:text="@string/question1"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleText" />

        <Button
            android:id="@+id/question2"
            style="@style/ButtonStyle"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/helvetica_family"
            android:text="@string/question2"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question1" />

        <Button
            android:id="@+id/question3"
            style="@style/ButtonStyle"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/helvetica_family"
            android:text="@string/question3"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question2" />

        <Button
            android:id="@+id/question4"
            style="@style/ButtonStyle"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/helvetica_family"
            android:text="@string/question4"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question3" />

        <Button
            android:id="@+id/question5"
            style="@style/ButtonStyle"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/helvetica_family"
            android:text="@string/question5"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question4" />

        <TextView
            android:id="@+id/text_view_faq"
            android:layout_width="333dp"
            android:layout_height="131dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/helvetica_family"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question5"
            app:layout_constraintVertical_bias="0.57" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
